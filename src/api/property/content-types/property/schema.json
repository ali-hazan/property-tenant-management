{
  "kind": "collectionType",
  "collectionName": "properties",
  "info": {
    "singularName": "property",
    "pluralName": "properties",
    "displayName": "Property"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "propertyId": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "address": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "occupied",
        "vacant",
        "construction",
        "maintenance"
      ]
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "commercial",
        "partion",
        "flatmate",
        "villa",
        "flat"
      ]
    },
    "numberOfTenant": {
      "type": "integer",
      "required": true
    },
    "manager": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "properties"
    },
    "images": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal"
    },
    "maintenance_requests": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::maintenance-request.maintenance-request",
      "mappedBy": "property"
    }
  }
}
